<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffff7745">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:background="@android:drawable/ic_media_play"
        android:layout_alignTop="@+id/previousButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previousButton"
        android:background="@android:drawable/ic_media_rew"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/playButton"
        android:layout_toStartOf="@+id/playButton"
        android:layout_marginRight="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="47dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:background="@android:drawable/ic_media_ff"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignTop="@+id/playButton"
        android:layout_toRightOf="@+id/playButton"
        android:layout_toEndOf="@+id/playButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pauseButton"
        android:background="@android:drawable/ic_media_pause"
        android:layout_alignTop="@+id/playButton"
        android:layout_toLeftOf="@+id/playButton"
        android:layout_toStartOf="@+id/playButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play some music using buttons above"
        android:id="@+id/myText1"
        android:layout_below="@+id/playButton"
        android:layout_alignLeft="@+id/previousButton"
        android:layout_alignStart="@+id/previousButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="song title"
        android:id="@+id/songTitleView"
        android:layout_above="@+id/playButton"
        android:layout_alignLeft="@+id/pauseButton"
        android:layout_alignStart="@+id/pauseButton"
        android:layout_marginBottom="70dp" />

</RelativeLayout>
